{
    "name": "briskwind",
    "description": "Lightweight Starter Theme, based on Tailwind",
    "version": "0.0.1",
    "main": "index.js",
    "license": "MIT",
    "author": "Uriel Wilson",
    "homepage": "https://github.com/devuri/briskwind",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devuri/briskwind.git"
    },
    "bugs": {
        "url": "https://github.com/devuri/briskwind/issues"
    },
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "prettier": "^2.8.3",
        "prettier-plugin-tailwindcss": "^0.2.1",
        "tailwindcss": "^3.1.4"
    },
    "scripts": {
        "watch": "npx tailwindcss -i ./src/assets/input.css -o ./assets/dist/css/output.css --watch",
        "build": "npx tailwindcss -i ./src/assets/input.css -o ./assets/dist/css/output.css --minify",
        "ex-config": "npx tailwind -i tailwind-full.config.js --full"
    }
}
